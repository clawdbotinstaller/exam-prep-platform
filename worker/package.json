{
  "name": "testament-api",
  "version": "1.0.0",
  "description": "Testament API - Cloudflare Worker with D1 Database",
  "main": "src/index.ts",
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "wrangler deploy",
    "db:create": "wrangler d1 create testament-db",
    "db:migrate": "wrangler d1 migrations apply testament-db",
    "db:seed": "wrangler d1 execute testament-db --file=./seed.sql",
    "init": "curl -X POST http://localhost:8787/init"
  },
  "dependencies": {
    "hono": "^4.6.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20250204.0",
    "wrangler": "^3.107.0"
  }
}
